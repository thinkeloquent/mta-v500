    "react-dom": "18.3.1"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": []
    }
  },
  "optionalDependencies": {
    "@rollup/rollup-darwin-arm64": "^4.53.3"
  }
}
