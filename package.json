{
  "name": "mta-v500",
  "version": "0.0.0",
  "description": "Multi-language monorepo (Python + JavaScript) using Nx",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "workspaces": [
    "packages-mjs/*",
    "fastify-apps/*",
    "fastapi-apps/*/frontend",
    "fastify-apps/*/frontend"
  ],
  "scripts": {
    "postinstall": "node scripts/ensure-rollup-binary.mjs",
    "create:fastify-app": "node tools/project-templates/fastify-apps-simple/bin/create-fastify-app.mjs",
    "create:fastapi-app": "node tools/project-templates/fastapi-apps-simple/bin/create-fastapi-app.mjs",
    "create:fastapi-frontend": "node tools/project-templates/fastapi-apps-frontend-simple/bin/create-fastapi-frontend.mjs",
    "build": "pnpm nx run-many --skip-nx-cache --verbose --target=build --output-style=stream",
    "dev": "nx run-many -t dev",
    "test": "nx run-many -t test",
    "clean": "nx run-many -t clean",
    "generate-types": "./common/scripts/generate-types.sh",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "graph": "nx graph",
    "affected": "nx affected",
    "affected:build": "nx affected -t build",
    "affected:test": "nx affected -t test"
  },
  "keywords": [
    "monorepo",
    "workspaces",
    "frontend",
    "fastapi",
    "fastify",
    "multi-language",
    "nx"
  ],
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "@biomejs/biome": "2.3.6",
    "@changesets/cli": "2.29.7",
    "@nx/vite": "22.0.3",
    "@playwright/test": "1.56.1",
    "@types/node": "24.10.1",
    "@types/properties-parser": "^0.3.3",
    "@types/react": "18.3.27",
    "@types/react-dom": "18.3.7",
    "@vitejs/plugin-react": "5.1.1",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "autoprefixer": "10.4.21",
    "esbuild": "0.21.5",
    "fastify": "5.6.2",
    "nx": "22.0.3",
    "pino-pretty": "13.1.2",
    "postcss": "8.5.6",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tailwindcss": "3.4.18",
    "tsup": "8.5.1",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vite": "7.2.2",
    "vite-plugin-dts": "4.5.4",
    "vitest": "3.2.4"
  },
  "overrides": {
    "browserslist": "^4.27.0",
    "vitest": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "esbuild": "0.21.5",
    "@ai-sdk/openai-compatible": {
      "zod": "$zod"
    },
    "ai": {
      "zod": "$zod"
    }
  },
  "dependencies": {
    "@ai-sdk/openai-compatible": "0.2.14",
    "@anthropic-ai/sdk": "0.67.1",
    "@fastify/basic-auth": "6.2.0",
