    "@fastify/rate-limit": "10.3.0",
    "@fastify/sensible": "6.0.3",
    "@fastify/static": "8.3.0",
    "@fastify/swagger": "9.6.1",
    "@fastify/swagger-ui": "5.2.3",
    "@internal/core-decorator-registry": "workspace:*",
    "@internal/core-exceptions": "workspace:*",
    "@internal/core-no-cache": "workspace:*",
    "@internal/core-plugin-logger": "workspace:*",
    "@internal/core-prisma-utils": "workspace:*",
    "@internal/core-route-logger": "workspace:*",
    "@internal/core-static-app": "workspace:*",
    "@internal/skeleton": "workspace:*",
    "@monaco-editor/react": "4.7.0",
    "ai": "4.3.19",
