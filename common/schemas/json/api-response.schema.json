{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mta-v500.local/schemas/api-response.schema.json",
  "title": "API Response",
  "description": "Standard API response format for MTA-V500",
  "type": "object",
  "properties": {
    "success": {
      "type": "boolean",
      "description": "Indicates if the request was successful"
    },
    "data": {
      "description": "Response data"
    },
    "error": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string",
          "description": "Error code"
        },
        "message": {
          "type": "string",
          "description": "Error message"
        },
        "details": {
          "type": "object",
          "description": "Additional error details"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "requestId": {
          "type": "string",
          "format": "uuid"
        }
      }
    }
  },
  "required": ["success"]
}
