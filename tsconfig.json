{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["node"]
  },
  "exclude": [
    "**/tests/**",
    "**/test/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/examples/**",
    "**/example/**",
    "**/*.config.ts",
    "**/vitest.config.ts",
    "**/frontend/**",
    "node_modules",
    "tools"
  ]
}
