{
  "name": "@internal/core-static-app",
  "version": "1.0.3",
  "description": "Fastify plugin for serving static files with SPA support",
  "license": "MIT",
  "author": "ThinkEloquent",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carlosmarte/mta-multi-tenant-application.git",
    "directory": "external/core-static-app"
  },
  "homepage": "https://github.com/carlosmarte/mta-multi-tenant-application#readme",
  "bugs": {
    "url": "https://github.com/carlosmarte/mta-multi-tenant-application/issues"
  },
  "keywords": [
    "fastify",
    "plugin",
    "static",
    "spa",
    "vite"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/static": "^8.0.2",
    "@internal/core-decorator-registry": "workspace:*",
    "fastify-plugin": "^5.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^3.2.4",
    "fastify": "^5.6.1",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "fastify": ">=5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
