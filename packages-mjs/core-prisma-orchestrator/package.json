{
  "name": "@internal/core-prisma-orchestrator",
  "version": "1.0.4",
  "description": "CLI orchestrator for managing multiple Prisma schemas in a monorepo",
  "license": "MIT",
  "author": "ThinkEloquent",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carlosmarte/mta-multi-tenant-application.git",
    "directory": "external/core-prisma-orchestrator"
  },
  "homepage": "https://github.com/carlosmarte/mta-multi-tenant-application#readme",
  "bugs": {
    "url": "https://github.com/carlosmarte/mta-multi-tenant-application/issues"
  },
  "keywords": [
    "prisma",
    "monorepo",
    "cli",
    "orchestrator",
    "migration",
    "multi-schema"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mta-prisma": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "execa": "^9.0.0",
    "glob": "^11.0.0",
    "ora": "^8.0.0",
    "p-limit": "^6.0.0",
    "chokidar": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "prisma": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
