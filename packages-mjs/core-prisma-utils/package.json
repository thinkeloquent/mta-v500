{
  "name": "@internal/core-prisma-utils",
  "version": "1.0.4",
  "description": "Shared Prisma utilities for multi-tenant framework",
  "license": "MIT",
  "author": "ThinkEloquent",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carlosmarte/mta-multi-tenant-application.git",
    "directory": "external/core-prisma-utils"
  },
  "homepage": "https://github.com/carlosmarte/mta-multi-tenant-application#readme",
  "bugs": {
    "url": "https://github.com/carlosmarte/mta-multi-tenant-application/issues"
  },
  "keywords": [
    "prisma",
    "database",
    "multi-tenant"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@internal/core-exceptions": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@prisma/client": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "publishConfig": {
